local UILibrary = {}

-- สร้างหน้าต่างหลัก
function UILibrary:CreateWindow(title)
    local ScreenGui = Instance.new("ScreenGui")
    local MainFrame = Instance.new("Frame")
    local Title = Instance.new("TextLabel")
    local ToggleButton = Instance.new("ImageButton")

    -- ScreenGui
    ScreenGui.Name = "CustomUILibrary"
    ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

    -- MainFrame
    MainFrame.Size = UDim2.new(0.6, 0, 0.7, 0)  -- ขนาด UI หลัก
    MainFrame.Position = UDim2.new(0.2, 0, 0.15, 0)
    MainFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    MainFrame.BorderSizePixel = 0
    MainFrame.Visible = true
    MainFrame.Parent = ScreenGui

    -- Title
    Title.Size = UDim2.new(1, 0, 0.1, 0)
    Title.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    Title.Text = title or "UI Library"
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.Font = Enum.Font.GothamBold
    Title.TextScaled = true
    Title.Parent = MainFrame

    -- Floating Toggle Button
    ToggleButton.Size = UDim2.new(0, 40, 0, 40)
    ToggleButton.Position = UDim2.new(0.05, 0, 0.05, 0)
    ToggleButton.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    ToggleButton.Image = "rbxassetid://6031068420" -- ไอคอนเปิด/ปิด
    ToggleButton.Parent = ScreenGui

    -- ระบบ Toggle UI
    local dragging = false
    local offset = Vector2.new(0, 0)
    ToggleButton.MouseButton1Down:Connect(function(input)
        dragging = true
        offset = ToggleButton.Position - UDim2.fromOffset(input.Position.X, input.Position.Y)
    end)
    game:GetService("UserInputService").InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            ToggleButton.Position = UDim2.fromOffset(input.Position.X, input.Position.Y) + offset
        end
    end)
    ToggleButton.MouseButton1Up:Connect(function()
        dragging = false
    end)
    ToggleButton.MouseButton1Click:Connect(function()
        MainFrame.Visible = not MainFrame.Visible
    end)

    return { ScreenGui = ScreenGui, MainFrame = MainFrame }
end

-- Check Box Toggle
function UILibrary:CreateCheckBox(parent, labelText, callback)
    local Frame = Instance.new("Frame")
    local Label = Instance.new("TextLabel")
    local CheckBox = Instance.new("TextButton")

    -- Frame
    Frame.Size = UDim2.new(0.8, 0, 0.1, 0)  -- ขนาดของ Checkbox
    Frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    Frame.Position = UDim2.new(0.1, 0, 0.2, 0)
    Frame.Parent = parent

    -- Label
    Label.Size = UDim2.new(0.75, 0, 1, 0)
    Label.Text = labelText or "Check Box"
    Label.TextColor3 = Color3.fromRGB(255, 255, 255)
    Label.Font = Enum.Font.Gotham
    Label.TextScaled = true
    Label.BackgroundTransparency = 1
    Label.Parent = Frame

    -- CheckBox
    CheckBox.Size = UDim2.new(0.2, 0, 0.8, 0)  -- ขนาดของ Checkbox
    CheckBox.Position = UDim2.new(0.8, 0, 0.1, 0)
    CheckBox.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    CheckBox.Text = ""
    CheckBox.Parent = Frame

    local isChecked = false
    CheckBox.MouseButton1Click:Connect(function()
        isChecked = not isChecked
        CheckBox.BackgroundColor3 = isChecked and Color3.fromRGB(0, 200, 0) or Color3.fromRGB(70, 70, 70)
        if callback then callback(isChecked) end
    end)
end

-- Slider with Input Box
function UILibrary:CreateSlider(parent, labelText, minValue, maxValue, callback)
    local Frame = Instance.new("Frame")
    local Label = Instance.new("TextLabel")
    local SliderBar = Instance.new("Frame")
    local SliderKnob = Instance.new("Frame")
    local InputBox = Instance.new("TextBox")

    -- Frame
    Frame.Size = UDim2.new(0.8, 0, 0.1, 0)  -- ขนาดของ Slider
    Frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    Frame.Position = UDim2.new(0.1, 0, 0.35, 0)
    Frame.Parent = parent

    -- Label
    Label.Size = UDim2.new(0.3, 0, 1, 0)
    Label.Text = labelText or "Slider"
    Label.TextColor3 = Color3.fromRGB(255, 255, 255)
    Label.Font = Enum.Font.Gotham
    Label.TextScaled = true
    Label.BackgroundTransparency = 1
    Label.Parent = Frame

    -- SliderBar
    SliderBar.Size = UDim2.new(0.6, 0, 0.3, 0)  -- ขนาดของแถบ Slider
    SliderBar.Position = UDim2.new(0.35, 0, 0.35, 0)
    SliderBar.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    SliderBar.Parent = Frame

    -- SliderKnob
    SliderKnob.Size = UDim2.new(0, 10, 1, 0)
    SliderKnob.Position = UDim2.new(0, 0, 0, 0)
    SliderKnob.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
    SliderKnob.Parent = SliderBar

    -- InputBox
    InputBox.Size = UDim2.new(0.2, 0, 1, 0)
    InputBox.Position = UDim2.new(0.88, 0, 0, 0)
    InputBox.Text = tostring(minValue)
    InputBox.Font = Enum.Font.Gotham
    InputBox.TextScaled = true
    InputBox.TextColor3 = Color3.fromRGB(255, 255, 255)
    InputBox.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    InputBox.Parent = Frame

    local function updateSlider(value)
        local percentage = (value - minValue) / (maxValue - minValue)
        SliderKnob.Position = UDim2.new(percentage, 0, 0, 0)
        InputBox.Text = tostring(value)
        if callback then callback(value) end
    end

    SliderBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            local mousePos = game:GetService("UserInputService"):GetMouseLocation().X
            local barPos = SliderBar.AbsolutePosition.X
            local barSize = SliderBar.AbsoluteSize.X
            local percentage = math.clamp((mousePos - barPos) / barSize, 0, 1)
            local value = math.floor(minValue + (percentage * (maxValue - minValue)))
            updateSlider(value)
        end
    end)

    InputBox.FocusLost:Connect(function()
        local value = tonumber(InputBox.Text) or minValue
        value = math.clamp(value, minValue, maxValue)
        updateSlider(value)
    end)
end

return UILibrary