local MobileUILibrary = {}
MobileUILibrary.__index = MobileUILibrary

-- สร้าง UI ใหม่
function MobileUILibrary.new(title)
    local self = setmetatable({}, MobileUILibrary)

    -- สร้าง GUI
    self.screenGui = Instance.new("ScreenGui")
    self.screenGui.Name = "MobileUI"
    self.screenGui.Parent = game.Players.LocalPlayer.PlayerGui

    self.mainFrame = Instance.new("Frame")
    self.mainFrame.Size = UDim2.new(0, 400, 0, 500)
    self.mainFrame.Position = UDim2.new(0.5, -200, 0.5, -250)
    self.mainFrame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    self.mainFrame.BackgroundTransparency = 0.1
    self.mainFrame.BorderSizePixel = 2
    self.mainFrame.BorderColor3 = Color3.fromRGB(255, 128, 191)
    self.mainFrame.Parent = self.screenGui

    -- ส่วนหมวดหมู่ (Tabs) ที่สามารถเลื่อนซ้ายขวา
    self.tabsBar = Instance.new("ScrollingFrame")
    self.tabsBar.Size = UDim2.new(1, 0, 0, 50)
    self.tabsBar.BackgroundColor3 = Color3.fromRGB(255, 195, 215)  -- สีชมพูเข้มขึ้น
    self.tabsBar.BorderSizePixel = 1
    self.tabsBar.BorderColor3 = Color3.fromRGB(255, 128, 191)
    self.tabsBar.ScrollBarThickness = 8
    self.tabsBar.ScrollDirection = Enum.ScrollingDirection.XY  -- เลื่อนซ้ายขวาได้
    self.tabsBar.ClipsDescendants = false  -- ไม่ให้ตัดข้อความหากมันเกิน
    self.tabsBar.Parent = self.mainFrame

    -- UIListLayout สำหรับการจัดวาง Tabs
    self.tabsLayout = Instance.new("UIListLayout", self.tabsBar)
    self.tabsLayout.FillDirection = Enum.FillDirection.Horizontal
    self.tabsLayout.Padding = UDim.new(0, 6)
    self.tabsLayout.HorizontalAlignment = Enum.HorizontalAlignment.Left

    -- ปรับ CanvasSize ให้เหมาะสมกับขนาดของ Tabs
    self.tabsLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
        self.tabsBar.CanvasSize = UDim2.new(0, self.tabsLayout.AbsoluteContentSize.X + 10, 0, 0)
    end)

    -- สร้างปุ่ม Toggle
    self.toggleButton = Instance.new("TextButton")
    self.toggleButton.Size = UDim2.new(0, 100, 0, 30)
    self.toggleButton.Position = UDim2.new(1, -110, 0, 10)
    self.toggleButton.Text = "เปิดเมนู"
    self.toggleButton.BackgroundColor3 = Color3.fromRGB(255, 128, 191)
    self.toggleButton.BorderSizePixel = 0
    self.toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    self.toggleButton.Font = Enum.Font.Gotham
    self.toggleButton.Parent = self.mainFrame

    -- สร้างส่วนเนื้อหาหมวดหมู่
    self.contentFrame = Instance.new("Frame")
    self.contentFrame.Size = UDim2.new(1, 0, 1, -60)
    self.contentFrame.Position = UDim2.new(0, 0, 0, 60)
    self.contentFrame.BackgroundColor3 = Color3.fromRGB(255, 240, 255)
    self.contentFrame.BackgroundTransparency = 0.8
    self.contentFrame.Parent = self.mainFrame

    -- UIListLayout สำหรับเนื้อหาหมวดหมู่
    self.contentLayout = Instance.new("UIListLayout", self.contentFrame)
    self.contentLayout.FillDirection = Enum.FillDirection.Vertical
    self.contentLayout.Padding = UDim.new(0, 8)

    -- ฟังก์ชันการเปิด/ปิดเมนู
    self.toggleButton.MouseButton1Click:Connect(function()
        self.mainFrame.Visible = not self.mainFrame.Visible
        self.toggleButton.Text = self.mainFrame.Visible and "ปิดเมนู" or "เปิดเมนู"
    end)

    return self
end

-- ฟังก์ชันเพิ่ม Tab ใหม่
function MobileUILibrary:AddTab(tabName)
    local tabButton = Instance.new("TextButton")
    tabButton.Size = UDim2.new(0, 100, 0, 40)
    tabButton.Text = tabName
    tabButton.BackgroundColor3 = Color3.fromRGB(255, 128, 191)
    tabButton.BorderSizePixel = 1
    tabButton.BorderColor3 = Color3.fromRGB(255, 255, 255)
    tabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    tabButton.Font = Enum.Font.Gotham
    tabButton.Parent = self.tabsBar

    tabButton.MouseButton1Click:Connect(function()
        -- ทำให้ Tab ที่เลือกแสดงผลและยกเลิกการแสดงของ Tab อื่นๆ
        for _, button in pairs(self.tabsBar:GetChildren()) do
            if button:IsA("TextButton") then
                button.BackgroundColor3 = Color3.fromRGB(255, 128, 191)
            end
        end
        tabButton.BackgroundColor3 = Color3.fromRGB(255, 195, 215)  -- สีเมื่อเลือก
    end)
end

-- ฟังก์ชันเพิ่มปุ่มใน Tab
function MobileUILibrary:AddButtonToTab(tabName, buttonName, callback)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 200, 0, 40)
    button.Text = buttonName
    button.BackgroundColor3 = Color3.fromRGB(255, 128, 191)
    button.BorderSizePixel = 1
    button.BorderColor3 = Color3.fromRGB(255, 255, 255)
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Font = Enum.Font.Gotham
    button.Parent = self.contentFrame

    button.MouseButton1Click:Connect(function()
        callback()
    end)
end

-- ฟังก์ชันเพิ่ม Toggle ใน Tab
function MobileUILibrary:AddToggleToTab(tabName, toggleName, defaultState, callback)
    local toggleFrame = Instance.new("Frame")
    toggleFrame.Size = UDim2.new(0, 200, 0, 40)
    toggleFrame.BackgroundTransparency = 1
    toggleFrame.Parent = self.contentFrame

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(0, 150, 0, 40)
    label.Text = toggleName
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.Font = Enum.Font.Gotham
    label.TextSize = 14
    label.Parent = toggleFrame

    local toggleBtn = Instance.new("TextButton")
    toggleBtn.Size = UDim2.new(0, 40, 0, 20)
    toggleBtn.Position = UDim2.new(1, -50, 0, 10)
    toggleBtn.BackgroundColor3 = Color3.fromRGB(230, 230, 230)
    toggleBtn.Text = ""
    toggleBtn.BorderSizePixel = 0
    toggleBtn.Parent = toggleFrame

    local circle = Instance.new("Frame")
    circle.Size = UDim2.new(0, 18, 0, 18)
    circle.Position = defaultState and UDim2.new(1, -28, 0.5, -12) or UDim2.new(0, 2, 0.5, -12)
    circle.BackgroundColor3 = Color3.fromRGB(255, 128, 191)
    circle.BorderSizePixel = 0
    circle.Parent = toggleBtn

    toggleBtn.MouseButton1Click:Connect(function()
        defaultState = not defaultState
        circle.Position = defaultState and UDim2.new(1, -28, 0.5, -12) or UDim2.new(0, 2, 0.5, -12)
        callback(defaultState)
    end)
end

return MobileUILibrary